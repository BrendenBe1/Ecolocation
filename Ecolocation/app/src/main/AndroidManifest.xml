<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ecolocation.ecolocation">

    <!-- Permission for Location Services -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission for Location Services -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Home Activity -->
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Spatial Map Activity -->


        <!-- About Activity -->
        <activity
            android:name=".AboutActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- Info Activity -->
        <activity
            android:name=".InfoActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AboutActivity" />
        </activity>

        <!-- Graph Results Activity -->
        <activity
            android:name=".GraphResultsActivity"
            android:parentActivityName=".LocationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationActivity" />
        </activity>

        <!-- Animal Detail Activity -->
        <activity
            android:name=".DetailActivity"
            android:parentActivityName=".ListViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewActivity" />
        </activity>

        <!-- Location Activity -->
        <activity
            android:name=".LocationActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- List View Activity -->
        <activity
            android:name=".ListViewActivity"
            android:parentActivityName=".GraphResultsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GraphResultsActivity" />
        </activity>

        <activity
            android:name=".WebActivity"
            android:parentActivityName=".DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DetailActivity" />
        </activity>
        <activity android:name=".DataResultsActivity"
            android:parentActivityName=".LocationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationActivity" />
        </activity>

        <!-- The API key for Google Maps-based APIs. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />


    </application>

</manifest>