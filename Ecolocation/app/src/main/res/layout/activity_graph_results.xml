<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ecolocation.ecolocation.GraphResultsActivity">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:foregroundGravity="center"></com.github.mikephil.charting.charts.BarChart>


    <Button
        android:id="@+id/bttn_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:text="Animal List" />

    <Button
        android:id="@+id/bttn_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/bttn_database"
        android:text="Spatial Map"
        android:textSize="12sp" />


    <Button
        android:id="@+id/bttn_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:text="Database Demo"
        android:textSize="12sp" />
</RelativeLayout>
